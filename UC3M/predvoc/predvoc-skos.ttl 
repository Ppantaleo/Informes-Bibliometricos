# Faceta 5: Sitio Web y Comunicación
# ========================================

predvoc:sitio-web-no-profesional a skos:Concept ;
    skos:prefLabel "sitio web no profesional"@es , "unprofessional website"@en ;
    skos:altLabel "página web deficiente"@es , "poor website"@en ;
    skos:definition "Sitio web con diseño amateur, errores técnicos frecuentes o funcionalidad limitada"@es ;
    skos:definition "Website with amateur design, frequent technical errors or limited functionality"@en ;
    skos:broader predvoc:sitio-web ;
    skos:inScheme predvoc: .

predvoc:errores-ortograficos a skos:Concept ;
    skos:prefLabel "errores ortográficos frecuentes"@es , "frequent spelling errors"@en ;
    skos:altLabel "errores gramaticales"@es , "grammatical errors"@en ;
    skos:definition "Presencia abundante de errores ortográficos, gramaticales o de traducción automática en el sitio web"@es ;
    skos:definition "Abundant presence of spelling, grammatical or automatic translation errors on the website"@en ;
    skos:broader predvoc:sitio-web ;
    skos:inScheme predvoc: .

predvoc:falta-informacion-contacto a skos:Concept ;
    skos:prefLabel "falta información de contacto"@es , "lack of contact information"@en ;
    skos:altLabel "contacto no verificable"@es , "unverifiable contact"@en ;
    skos:definition "Ausencia o información incompleta sobre dirección física, teléfono o contacto editorial"@es ;
    skos:definition "Absence or incomplete information about physical address, telephone or editorial contact"@en ;
    skos:broader predvoc:sitio-web ;
    skos:inScheme predvoc: .

predvoc:sitio-web-clonado a skos:Concept ;
    skos:prefLabel "sitio web clonado"@es , "cloned website"@en ;
    skos:altLabel "página duplicada"@es , "duplicate page"@en ;
    skos:definition "Copia o imitación del diseño y contenido del sitio web de una revista legítima"@es ;
    skos:definition "Copy or imitation of the design and content of a legitimate journal's website"@en ;
    skos:broader predvoc:sitio-web ;
    skos:related predvoc:revista-secuestrada ;
    skos:inScheme predvoc: .

